---
import Layout from "../layouts/Layout.astro";
import { Image } from 'astro:assets';
import heroLogo from "../Images/heroLogo.svg";

import Card from "../components/Card.astro";
---

<Layout title="Welcome to Astro.">
  <section class="hero">
    <div class="container">
      <div class="h1-group">
        <Image src={heroLogo} alt="logo" width=130 height=130></Image>

        <h1>Website under construction</h1>
      </div>
    </div>
  </section>
  <section class="announcement">
    <div class="container">
      <h2>
        We're excited to announce that Elas is evolving into three distinct
        divisions. <br />
         Get to know our dedicated directors leading the way!
      </h2>
      <div class="grid">
        <div class="card">
          <h3>Nemanja</h3>
        </div>
        <div class="card">
          <h3>Nemanja</h3>
        </div>
        <div class="card">
          <h3>Nemanja</h3>
        </div>
      </div>
    </div>
  </section>

  <footer>
    <div class="container">
      <h2>Location:</h2>
      <p>RamiÄ‡ka</p>

      <h2>Contact:</h2>
      <p>Central: asdasd</p>
    </div>
  </footer>
</Layout>

<style>
  .h1-group {
    display: flex;
    align-items: flex-start;
    gap: 2rem;
    max-width: 600px;
  }
  .hero {
    background-color: var(--gray);
    background-image: url("header-pocetna.jpg");
    background-position: right;
    background-repeat: no-repeat;
    background-size: cover;
    padding-top: 160px;
    color: white;
    min-height: 600px;
  }
  .announcement {
    padding: 60px 0 60px 0;
    text-align: center;
  }
  .announcement h2 {
    max-width: 920px;
    margin: 0 auto 32px auto;
  }

  footer {
    background-color: var(--main);
    padding: 60px 0;
    color:white;
  }

  @media only screen and (max-width:768px) {
    .h1-group { 
      flex-direction: column;
    }
   
  }
</style>
