---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="ELAS Metalexpert was founded in 1994 with the focus on sheet metal processing. Today the company expands on 13500 square meters and has 250 employees. " />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
     <!-- Open Graph meta tags -->
  <meta property="og:title" content="Elas - A place where a game starts">
  <meta property="og:description" content=" ELAS Metalexpert was founded in 1994 with the focus on sheet metal processing. Today the company expands on 13500 square meters and has 250 employees.">
  <meta property="og:image" content="https://elas.ba/opengraph.jpg">
  <meta property="og:url" content=" http://elas.ba/">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <main><slot /></main>
  </body>
</html>
<style is:global>
  :root {
    --main: #4eb857;
    --dark: #000;
    --reservedBlue:#D1D9DE;
    --distantThunder:#7F8589;
    --southPacific:#688392;
    --urbanite:#4C555A;
    
  
  }
  html {
    font-family: Roboto, sans-serif;
    box-sizing: border-box;

  }
  body {
    margin: 0;
    padding: 0;
  }
  main {
    margin: auto;
    color: black;
    font-size: 20px;
    line-height: 1.5;
  }
  
  section {
    padding:0 16px;
  }


  .container {
    max-width: 100%;
    width: 1280px;
    margin: 0 auto;


  }
  h1 {
    font-size: 64px;
    font-weight: 300;
    line-height: 1.2;
    margin: 0;
    letter-spacing: 1.8px;
  }
  h2 {
    font-size: 40px;
    font-weight: 300;
    line-height: 1.2;
    margin: 0;
  }

  h3 {
    font-size: 35px;
    font-weight: 500;
  }

  h4 {
    font-weight:400;
    font-size: 20px;
    line-height: 1.2;
  }

  a {
    display: flex;
    align-items: center;
    gap: 16px;
    text-decoration: none;
    color: white;
  }

  h1, h2, h3, h4, h5, h6 {
margin:0;
}

p {
  font-weight: 400;
margin:0;
}

 

  @media only screen and (max-width:768px) {
    h1 {
      font-size: 48px;
    }
    h2 {
      font-size: 32px;
    }
    h3 {
      font-size: 28px;
    }
  }
</style>
