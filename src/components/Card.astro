---
interface Props {
	name: string;
	desc: string;
	job: string;
	image: string;
}

const { name, desc, job, image } = Astro.props;
---

<div class="card">
	<div class="img-wrapper">
			<img src={image} alt={name} width="100%">	
			<div class="name-wrapper"><h4>{name}</h4></div>
</div>
    
	<h3>{job}</h3>
	<div class="desc-wrapper">
		<p>{desc}</p>

	</div>
</div>
<style>
	.card {
		width: 276px;
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 24px 12px 12px 12px;
		background-color: var(--reservedBlue);
		border-radius: 30px;
		gap: 32px;
	}

	.img-wrapper {
		position: relative;
	}

	.card h3 {
		text-transform: uppercase;
		color: var(--urbanite);
	}


	.desc-wrapper {
		display: flex;
		flex-direction: column;
		justify-content: center;		
		background-color: var(--distantThunder);
		border-radius: 30px;
		color: white;
		height: 194px;
		padding: 0 12px;
	}

	.name-wrapper {
		max-width: 160px;
         width: 100%;
		background-color: var(--southPacific);
		padding: 12px 32px;
		color:white;
		border-radius: 16px;
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%) ;
	}

	@media only screen and (min-width: 360px) {
		.card {
			max-width: 300px;
		}
	}

	
</style>
