---
interface Props {
	name: string;
	desc: string;
	job: string;
	image: string;
}

const { name, desc, job, image } = Astro.props;
---

<div class="card">
	<img src={image} alt={name} width="100%">
	<div class="name-wrapper"><h4>{name}</h4></div>
    
	<h3>{job}</h3>
	<div class="desc-wrapper">
		<p>{desc}</p>

	</div>
</div>
<style>
	.card {
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 24px 12px 12px 12px;
		background-color: #D1D9DE;
		border-radius: 30px;
	}

	.card h3 {
		text-transform: uppercase;
	}


	.desc-wrapper {
		background-color: #7F8589;
		border-radius: 30px;
		padding: 32px 12px;
		color: white;
	}

	.name-wrapper {
		background-color: #688392;
		padding: 12px 32px;
	}

	
</style>
